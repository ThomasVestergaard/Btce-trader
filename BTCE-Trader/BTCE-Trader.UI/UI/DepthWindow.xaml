<Window x:Class="BTCE_Trader.UI.UI.DepthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BtcLtc depth" Height="828" Width="662">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <DataGrid Grid.Row="0" ItemsSource="{Binding AggregatedAsks}"  AutoGenerateColumns="True" />
        
        <TextBlock Grid.Row="1" Text="Spread" />

        <DataGrid Grid.Row="2" ItemsSource="{Binding AggregatedBids}" AutoGenerateColumns="True" />

    </Grid>
</Window>
