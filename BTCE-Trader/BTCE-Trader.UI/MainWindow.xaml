<Window x:Class="BTCE_Trader.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UI="clr-namespace:BTCE_Trader.UI.UI.UserControls"
        Title="BTC-E Trader" WindowState="Maximized" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140" />
            <RowDefinition Height="*" />
            <RowDefinition Height="140" />
        </Grid.RowDefinitions>
        
        <Ribbon Grid.Row="0">
            <RibbonTab Header="Markets">
                <RibbonGroup Header="Data">
                    <RibbonButton Label="Market depth" />
                    <RibbonButton Label="Make trade!" Command="{Binding DemoTradeCommand}" />
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <UI:MarketDepth Pair="ltc_btc" DataContext="{Binding DepthViewModel}" />
            <UI:AccountInfo DataContext="{Binding AccountInfoViewModel}" />
        </StackPanel>
        

        <UI:ActiveOrders Grid.Row="2"  DataContext="{Binding ActiveOrdersViewModel}" />
    </Grid>
</Window>
